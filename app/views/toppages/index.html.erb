<div class="search">
  <%= form_with(url: '/', method: 'GET', local: true) do |f| %>
    <div class="input-group">
      <%= f.text_field :q, class: 'form-control' %>
      <div class="input-group-append">
        <button type="submit" class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>
<div class="content mt-4">
  <div class="content_navs btn-group">
    <a href="#" class="btn btn-secondary active" role="button" aria-pressed="true">グループ</a>
    <a href="#" class="btn btn-secondary" role="button" aria-pressed="true">ユーザ</a>
  </div>
  
  <div class="content-items mt-3">
    <%= render 'toppages/content_cards' %>
  </div>
</div>
  